import stdiomask
import os

class VkAuth:

    def __init__(self, token = None):
        '''
        Parameters
        --------------
        `token` : `str`, optional
            
        '''

        self.token = token

    def fromPrompt(self):
        '''
        Gets login and password from input prompt
        '''

        login = input("Login: ")
        password = stdiomask.getpass("Password: ")

        return (login, password)

    def fromRaw(self, login, password):
        '''
        Provide login and password explicitly

        Parameters
        -----------------
        `login` : `str`
        `password` : `str`
        '''

        return (login, password)

    def fromEnv(self, login="VK_LOGIN", password="VK_PASSWORD"):
        '''
        Acquire login and password from environment variable

        Parameters
        -----------------
        `login` : `str`, optional
           login variable, default `VK_LOGIN`
        `password` : `str`, optional
           login variable, default `VK_PASSWORD`
        '''
        return (os.getenv(login), os.getenv(password))
